extends layout

block content
  //- button(id="btn-duplicate" class="btn btn-primary")
  //-   span(class="glyphicon glyphicon-reload")

  div(id="video-clone")
    div(id="video-div2")
      iframe(id="ytplayer-clone" type="text/html" src="http://www.youtube.com/embed/M7lc1UVf-VE?controls=0&enablejsapi=1&modestbranding=1&rel=0&showinfo=0&wmode=opaque" frameborder="0" allowfullscreen)
  
  div(id="controls-wrapper")
    div(id="div-controls" class="")
      input(id="video-id" type="hidden" value= video)
      input(id="time" type="range" step="1" min=0 max=100 class="" )
      
      button(class="btn btn-primary" id="btn-play")
        span(class="glyphicon glyphicon-play")

      a(href="#" id="hidden-toggle") [Debug]
    
    div(id="hidden-wrapper")
      div(id="div-debug" class="")
        h3 Debug

        table(class="table")
          tr
            td Position
            td(id="table-position")

          tr
            td Length
            td(id="table-length")

          tr
            td Volume
            td(id="table-volume")

          tr
            td My ID
            td(id="table-myid")

          tr
            td Peers
            td(id="table-peers")
  
  div(id="video-primary")
    div(id="video-div")
      p Loading...
      iframe(id="ytplayer" type="text/html" src="http://www.youtube.com/embed/M7lc1UVf-VE?controls=0&enablejsapi=1&modestbranding=1&rel=0&showinfo=0&wmode=opaque&html5=1" frameborder="0" allowfullscreen)



block javascripts
  script(src="/javascripts/webrtc.io.js")
  script(src='/javascripts/video.js')